# Twenty CRM Configuration
# Copy this file to .env and fill in your actual values

# Twenty CRM Instance
TWENTY_API_URL=http://localhost:3000   # Local Twenty instance (use npm run twenty:quick to start)
TWENTY_API_KEY=your_api_key_here       # Your Twenty API key

# MCP Server Settings
MCP_SERVER_PORT=3001
LOG_LEVEL=info

# Performance Configuration
CACHE_ENABLED=true
CACHE_TTL_SECONDS=300
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT_MS=10000

# Development Settings (optional)
NODE_ENV=development

# Quick Start Commands:
# npm run twenty:quick    # Smart start Twenty CRM
# npm run twenty:setup    # Configure this .env file
# npm run discover        # Test MCP server